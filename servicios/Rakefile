desc "Generar paginas e Iniciar servidor"
task :runapp do
  sh "python ejecutable.py"
  sh "python manage.py runserver &"
  sh "firefox localhost:8000 &"
end

desc "Iniciar servidor"
task :server do
  sh "python manage.py runserver"
end

desc "Vuelve a generar las paginas"
task :recargar do
  sh "python ejecutable.py"
end

desc "Para el servidor"
task :stopserver do
  sh "killall python"
end
